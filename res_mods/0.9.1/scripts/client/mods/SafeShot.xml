<safeShotSetting>
	
    <!-- Author : Skino88 -->
	<!-- Official Thread : http://forum.worldoftanks.ru/index.php?/topic/1075087- -->
	
	<!-- Key to disable the mod. -->
	<disableKey>KEY_LALT</disableKey>
	
	<!-- The "sticky" hotkey. -->
	<toggledDisableKey>false</toggledDisableKey>
	
	<!-- Lock switch shot by the Allies. -->
	<teamShot>true</teamShot>
		
		<!-- Switch messages when trying to shoot at an ally. -->
		<toggleMessage>true</toggleMessage>
		
			<!-- Message when trying to shoot at an ally. -->
			<textMessage>%s, dont be a cunt, and block my line of fire!</textMessage>
		
	<!-- Lock switch shots to destroy tanks. -->
	<deadShot>true</deadShot>
		
		<!-- Lockout Duration shot to destroy tanks. (0.5 - 4.0) -->
		<deadShotTime>2.0</deadShotTime>
		
	<!-- Switch corrections rangefinder. -->
	<longShot>false</longShot>
		
		<!-- Duration substitution distance rangefinder . (0.5 - 10.0) -->
		<longShotTime>4.0</longShotTime>
		
</safeShotSetting>